extends layout

block content
  h2 Sign In

  form(action="/sign-in", method="post")
    .form-group
      label Email
      input.form-control(name="email", type="email")
    .form-group
      label Password
      input.form-control(name="password", type="password")
    .form-group
      input.btn.btn-success(type="submit", value="Sign In")
